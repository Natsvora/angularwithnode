<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC "-//Hibernate/Hibernate Configuration DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
  <session-factory>
    <property name="dialect">org.hibernate.dialect.MySQLDialect</property>
    <property name="show_sql">true</property>
    <mapping resource="com/argusoft/hibernatexml/bean/User.hbm.xml"/>
    <mapping class="com.argusoft.hibernatexml.model.Student"/>
    <mapping class="com.argusoft.hibernatexml.model.StudentDetails"/>
    <mapping class="com.argusoft.hibernatexml.model.School"/>
  </session-factory>
</hibernate-configuration>
